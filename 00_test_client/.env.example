# React Dev Server Port
PORT=3000

# API Base URL
# 로컬 개발: Django 서버 주소
REACT_APP_API_URL=http://localhost:8000/api

# WSL 환경에서는 Windows 호스트 IP로 변경
# REACT_APP_API_URL=http://172.29.64.1:8000/api

# 프로덕션 환경
# REACT_APP_API_URL=https://yourdomain.com/api

# DICOM Web API (Django Proxy를 통해 Orthanc 접근)
REACT_APP_DICOM_WEB_ROOT=http://localhost:8000/api/ris/dicom-web

# WSL 환경
# REACT_APP_DICOM_WEB_ROOT=http://172.29.64.1:8000/api/ris/dicom-web

# OHIF Viewer Root (Proxy or Direct)
REACT_APP_OHIF_VIEWER_ROOT=http://localhost/pacs-viewer

# Monitoring Dashboards
REACT_APP_GRAFANA_URL=http://localhost:3000
REACT_APP_PROMETHEUS_URL=http://localhost:9090

# Development Controls
REACT_APP_DEV_AUTO_LOGIN=true
